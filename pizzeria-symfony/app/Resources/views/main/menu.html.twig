{% extends 'templates/main.html.twig' %}

{% block body %}
<div class="space-medium">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="section-title">
                    <h2>Menu</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <!-- Pizzas -->
          <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
              <div class="menu-block">
              	  <div class="col-lg-7 col-md-7 col-sm-7 col-xs-12">
                  	<h3 class="menu-title">Pizzas</h3>
                  </div>
                  <div class="col-lg-1 col-md-1 col-sm-1 col-xs-12">
                  	<h3 class="menu-title">25cm</h3>
                  </div>
                  <div class="col-lg-1 col-md-1 col-sm-1 col-xs-12">
                  	<h3 class="menu-title">35cm</h3>
                  </div>
                  <div class="col-lg-1 col-md-1 col-sm-1 col-xs-12">
                  	<h3 class="menu-title">45cm</h3>
                  </div>
                  <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                  	<h3 class="menu-title text-center">Order</h3>
                  </div>
                  <div class="menu-content">
                  
                  {% for pizza in pizzas %}
                      <div class="row">
                          <div class="col-lg-1 col-md-1 col-sm-1 col-xs-4">
                              <div class="dish-img"><a href="#"><img src="./images/menu_dish_1.jpg" alt="" class="img-circle"></a></div>
                          </div>
                          <div class="col-lg-6 col-md-6 col-sm-6 col-xs-8">
                              <div class="dish-content">
                                  <h5 class="dish-title"><a href="#">{{ pizza.name }}</a></h5>
                                  <span class="dish-meta">{{ pizza.description }}</span>
                                 
                               </div>
                           </div>
                               <div class="col-lg-1 col-md-1 col-sm-1 col-xs-3">
                                   <div class="dish-price">
                                   	<p>${{ pizza.price*0.7 }}</p>
                               	</div>
                               </div>
                               <div class="col-lg-1 col-md-1 col-sm-1 col-xs-3">
                               	<div class="dish-price">
                                   	<p>${{ pizza.price }}</p>
                              		</div>
                              	</div>
                              	<div class="col-lg-1 col-md-1 col-sm-1 col-xs-3">
                               	<div class="dish-price">
                                   	<p>${{ pizza.price*1.3 }}</p>
                               	</div>
                               </div>
								<div class="col-lg-2 col-md-2 col-sm-2 col-xs-12 text-center">
			                  		<a href="login" class="btn btn-primary btn-xs mb20">order</a>
								</div>
                      </div>
                    {% endfor %}
                      
                  </div>
              </div>
          </div>
          <!-- /Pizzas-->
          <!-- Drinks -->
          <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
              <div class="menu-block">
              	  <div class="col-lg-7 col-md-7 col-sm-7 col-xs-12">
                  	<h3 class="menu-title">Drinks</h3>
                  </div>
                  <div class="col-lg-1 col-md-1 col-sm-1 col-xs-12">
                  	<h3 class="menu-title">0,5L</h3>
                  </div>
                  <div class="col-lg-1 col-md-1 col-sm-1 col-xs-12">
                  	<h3 class="menu-title">1L</h3>
                  </div>
                  <div class="col-lg-1 col-md-1 col-sm-1 col-xs-12">
                  	<h3 class="menu-title">2L</h3>
                  </div>
                  <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                  	<h3 class="menu-title text-center">Order</h3>
                  </div>
                  <div class="menu-content">
                  
                  {% for drink in drinks %}
                      <div class="row">
                          <div class="col-lg-1 col-md-1 col-sm-1 col-xs-4">
                              <div class="dish-img"><a href="#"><img src="./images/menu_dish_1.jpg" alt="" class="img-circle"></a></div>
                          </div>
                          <div class="col-lg-6 col-md-6 col-sm-6 col-xs-8">
                              <div class="dish-content">
                                  <h5 class="dish-title"><a href="#">{{ drink.name }}</a></h5>
                                  <span class="dish-meta">{{ drink.description }}</span>
                                 
                               </div>
                           </div>
                               <div class="col-lg-1 col-md-1 col-sm-1 col-xs-3">
                                   <div class="dish-price">
                                   	<p>${{ drink.price*0.7 }}</p>
                               	</div>
                               </div>
                               <div class="col-lg-1 col-md-1 col-sm-1 col-xs-3">
                               	<div class="dish-price">
                                   	<p>${{ drink.price }}</p>
                              		</div>
                              	</div>
                              	<div class="col-lg-1 col-md-1 col-sm-1 col-xs-3">
                               	<div class="dish-price">
                                   	<p>${{ drink.price*1.3 }}</p>
                               	</div>
                               </div>
								<div class="col-lg-2 col-md-2 col-sm-2 col-xs-12 text-center">
			                  		<a href="login" class="btn btn-primary btn-xs mb20">order</a>
								</div>
                      </div>
                    {% endfor %}
                      
                  </div>
              </div>
          </div>
          <!-- /Drinks-->
          <!-- fast-foods -->
          <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
              <div class="menu-block">
              	  <div class="col-lg-7 col-md-7 col-sm-7 col-xs-12">
                  	<h3 class="menu-title">Fast foods</h3>
                  </div>
                  <div class="col-lg-1 col-md-1 col-sm-1 col-xs-12">
                  	<h3 class="menu-title">S</h3>
                  </div>
                  <div class="col-lg-1 col-md-1 col-sm-1 col-xs-12">
                  	<h3 class="menu-title">M</h3>
                  </div>
                  <div class="col-lg-1 col-md-1 col-sm-1 col-xs-12">
                  	<h3 class="menu-title">L</h3>
                  </div>
                  <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                  	<h3 class="menu-title text-center">Order</h3>
                  </div>
                  <div class="menu-content">
                  
                	{% for fastFood in fastFoods %}
                      <div class="row">
                          <div class="col-lg-1 col-md-1 col-sm-1 col-xs-4">
                              <div class="dish-img"><a href="#"><img src="./images/menu_dish_1.jpg" alt="" class="img-circle"></a></div>
                          </div>
                          <div class="col-lg-6 col-md-6 col-sm-6 col-xs-8">
                              <div class="dish-content">
                                  <h5 class="dish-title"><a href="#">{{ fastFood.name }}</a></h5>
                                  <span class="dish-meta">{{ fastFood.description }}</span>
                                 
                               </div>
                           </div>
                               <div class="col-lg-1 col-md-1 col-sm-1 col-xs-3">
                                   <div class="dish-price">
                                   	<p>${{ fastFood.price*0.7 }}</p>
                               	</div>
                               </div>
                               <div class="col-lg-1 col-md-1 col-sm-1 col-xs-3">
                               	<div class="dish-price">
                                   	<p>${{ fastFood.price }}</p>
                              		</div>
                              	</div>
                              	<div class="col-lg-1 col-md-1 col-sm-1 col-xs-3">
                               	<div class="dish-price">
                                   	<p>${{ fastFood.price*1.3 }}</p>
                               	</div>
                               </div>
								<div class="col-lg-2 col-md-2 col-sm-2 col-xs-12 text-center">
			                  		<a href="login" class="btn btn-primary btn-xs mb20">order</a>
								</div>
                      </div>
                    {% endfor %}
                      
                  </div>
              </div>
          </div>
          <!-- /fast-foods-->
        </div>
    </div>
</div>
{% endblock %}