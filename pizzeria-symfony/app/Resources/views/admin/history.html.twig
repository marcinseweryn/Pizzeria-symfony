{% extends 'templates/admin.html.twig' %}

{% block body %}
<div class="col-12">
   <div class="card mb-3">
        <div class="card-header">
          <i class="fa fa-table"></i> History</div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
              <thead>
                <tr>
                  <th>Order ID</th>
                  <th>Date</th>
                  <th>State</th>
                  <th>Sum</th>
                  <th>Show</th>
                </tr>
              </thead>
              <tbody>
              	<form id="show" action="/admin/orders/order-details" method="post">
	              	<input type="hidden" name="from" value="history" />
	            </form>
	            <form id="preparing" action="/admin/history-action" method="post">
	              	
	            </form>
	            	{% for order in orders %}  
	                <tr>
	                  <td>{{ order.orderID }}</td>
	                  <td>{{ order.date|date('Y-m-d H:i:s') }}</td>
	                  <td>{{ order.state }}</td>
	                  <td>{{ order.sum }}</td>
	                  <td><button form="show" name="orderID" value="{{ order.orderID }}" class="btn btn-primary btn-block">Show</button></td>
	                </tr>
	                {% endfor %}
              </tbody>
            </table>
          </div>
        </div>
        <div class="card-footer small text-muted"></div>
    </div>
   
</div>
{% endblock %}
