{% extends 'templates/admin.html.twig' %}

{% block body %}
<div class="col-12">
	<div class="card mb-3">
        <div class="card-header">
          <i class="fa fa-table"></i> Products</div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Category</th>
                  <th>Description</th>
                  <th>Price</th>
                  <th>Show</th>
                </tr>
              </thead>
              <tbody>
              	<form action="/admin/products-action" method="post">
                <tr>
                  <td>
                  	<input name="name" class="form-control" type="text">
                  </td>
                  <td>
				    <select name="category" class="form-control">
				      <option>pizza</option>
				      <option>fast food</option>
				      <option>drinks</option>
				    </select>
                  </td>
                  <td>
                  	<input name="description" class="form-control" type="text">
                  </td>
                  <td>
                  	<input name="price" class="form-control" type="text">
                  </td>
                  <td>
                  	<button name="action" value="create" class="btn btn-success btn-block">Create</button>
                  </td>
                </tr>
                </form>
                {% for product in products %}      
				<form action="/admin/products-action" method="post">
	              	<tr>
	                  <td>
	                  	<input name="name" class="form-control" value="{{ product.name }}" type="text">
	                  </td>
	                  <td>
	             		<select name="category" class="form-control">
	             		  {% if product.category == 'pizza' %}
		             		  <option>{{ product.category }}</option>
						      <option>fast food</option>
						      <option>drinks</option>
					      {% endif %}
					      {% if product.category == 'fast food' %}
		             		  <option>{{ product.category }}</option>
						      <option>pizza</option>
						      <option>drinks</option>
					      {% endif %}
					      {% if product.category == 'drinks' %}
		             		  <option>{{ product.category }}</option>
						      <option>fast food</option>
						      <option>pizza</option>
					      {% endif %}
					    </select>
	                  </td>
	                  <td>
	                  	<input name="description" class="form-control" value="{{ product.description }}" type="text">
	                  </td>
	                  <td>
	                  	<input name="price" class="form-control" value="{{ product.price }}" type="text">
	                  </td>
	                  <td class="text-center">
	                  	<button type="submit" name="action" value="D{{ product.productID }}" 
                     	   style="background:transparent; border:none;" >
                     		<span class="fa fa-times fa-2x" style="color:#c94c4c;"></span>
                     	</button>
                     	<button type="submit" name="action" value="U{{ product.productID }}" 
                     	   style="background:transparent; border:none;" >
                     		<span class="fa fa-edit fa-2x" style="color:#ffad33;"></span>
                     	</button>
	                  </td>
	                </tr>
	             </form>
	            {% endfor %}
              </tbody>
            </table>
          </div>
        </div>
        <div class="card-footer small text-muted"></div>
    </div>
</div>
{% endblock %}
