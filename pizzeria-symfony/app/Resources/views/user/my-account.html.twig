{% extends 'templates/user.html.twig' %}

{% block body %}
<div class="space-medium">
    <div class="container">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="book-form">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <h2 class="mb50 text-center">My Account</h2>

                    </div>
                     {{ form_start(form) }}
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="form-group">
                       			{{ form_errors(form.name) }}
                                {{ form_widget(form.name,{'attr': {'class': 'form-control','placeholder': 'Name'}}) }}
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="form-group">
                                {{ form_errors(form.surname) }}
                				{{ form_widget(form.surname,{'attr': {'class': 'form-control','placeholder': 'Surname'}}) }}
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="form-group">
                                {{ form_errors(form.password) }}
                                {{ form_widget(form.password,{'attr': {'class': 'form-control','placeholder': 'Password'}}) }}
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="form-group">
                              	{{ form_errors(form.city) }}
        						{{ form_widget(form.city,{'attr': {'class': 'form-control','placeholder': 'City'}}) }}
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="form-group">
        						{{ form_errors(form.address) }}
                                {{ form_widget(form.address,{'attr': {'class': 'form-control','placeholder': 'Address'}}) }}
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="form-group">
                                {{ form_errors(form.postalCode) }}
                                {{ form_widget(form.postalCode,{'attr': {'class': 'form-control','placeholder': 'Postal Code'}}) }}
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="form-group">
                                {{ form_errors(form.phone) }}
                                {{ form_widget(form.phone,{'attr': {'class': 'form-control','placeholder': 'Phone'}}) }}
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="form-group">
    						    {{ form_errors(form.email) }}
                                {{ form_widget(form.email,{'attr': {'class': 'form-control','placeholder': 'Email'}}) }}
                            </div>
                        </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
